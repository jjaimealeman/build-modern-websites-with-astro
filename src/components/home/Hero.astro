---
// Astro tools
import { Image } from "astro:assets";

// Components
import Heading from "@/components/ui/Heading.astro";
import Link from "@/components/ui/Link.astro";

// Assets
import jaime from "@/assets/avatar2.webp";
---

<header class="hero-home" aria-label="Introduction to Jaime">
  <Image class="avatar" src={jaime} alt="Jaime Aleman" width={200} />
  <Heading tagName="h1" size="h2">👋🏼 Hello World!</Heading>
  <p class="">
    I'm a self-taught web developer and designer, based in El Paso, TX.
  </p>
  <div class="">
    <Link href="#" variant="secondary">Download CV</Link>
    <Link href="#contact">Let's Connect</Link>
  </div>
</header>
