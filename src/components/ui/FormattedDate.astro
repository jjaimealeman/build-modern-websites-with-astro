---
type Props = {
  pubDate: Date;
};
const { pubDate } = Astro.props;
---

<!-- <time class="text-accent font-bold" datetime={pubDate.toISOString()}>
  {pubDate.toLocaleDateString()}</time
> -->
<time class="text-accent font-bold" datetime={pubDate.toISOString()}>
  {
    pubDate
      .toLocaleDateString("en-US", {
        month: "long",
        day: "2-digit",
        year: "numeric",
      })
      .replace(",", "")
  }
</time>
